<div class="container text-center py-5 my-5 text-center">
    <div class="card py-5 mb-5">
        <div class="circular-image">
                <img src="http://localhost:5000/uploads/<%= user?.image %>" class="avatar " alt="">
        </div>
    <form method="POST" action="/user/Uploade" class="formImage " enctype="multipart/form-data">
        <label for="formFile" class="form-label " >Upload Image</label>
        <div class="mb-3">
        <div class=""> <input class="btn btn-outline-secondary my-2  m-auto" type="file" name="image" id="formFile" style="width: 200px; 
            height: 50px;" id="file"></div>
            <div class="ml-2"><button type="submit" class="btn btn-outline-success mt-3 d-block m-auto ">Upload</button></div>
        </div>
        </form>


        <h3 class="py-2"><%= user?.name %></h3>
        <div class="container w-50 m-auto">
            <form action="/message/send/<%= user?._id %>" method="post">
                <textarea class="form-control" name="content" cols="10" rows="9" placeholder="You cannot send a Sarahah to yourself, share your profile with your friends :)"></textarea>
                <button class="btn btn-outline-info mt-3"><i class="far fa-paper-plane"></i> Send</button>
            </form>
        </div>
    </div>
    <button data-toggle="modal" data-target="#share" class="btn btn-default-outline share "><i class="fas fa-share-alt"></i>  Share Profile</button>

</div>


<!--  Share profile Modal -->
<div class="modal fade" id="share" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Share Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
            </div>
            <div class="modal-body">
                <p><%= link %></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
